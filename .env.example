# Environment variables for ShadowChat

# Web3Auth Client ID - Get this from Web3Auth Dashboard
VITE_WEB3AUTH_CLIENT_ID=YOUR_WEB3AUTH_CLIENT_ID

# RPC URLs for different networks
VITE_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
VITE_POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_key
VITE_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_key

# IPFS Configuration
VITE_IPFS_API_URL=https://api.pinata.cloud
VITE_IPFS_JWT_TOKEN=your_pinata_jwt_token

# Smart Contract Addresses
VITE_SHARD_CONTRACT_ADDRESS=0x...
VITE_MESSAGE_CONTRACT_ADDRESS=0x...

# Application Configuration
VITE_APP_NAME=ShadowChat
VITE_APP_VERSION=1.0.0
VITE_NETWORK_ID=1
